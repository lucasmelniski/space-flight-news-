{
    "compilerOptions": {
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "strictNullChecks": true,
        "allowJs": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ES2021",
        "module": "CommonJS",
        "outDir": ".dist/",
        "declaration": true,
        "preserveConstEnums": true,
        "importHelpers": true,
        "watch": true,
        "rootDirs": ["src", "tests"],
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "baseUrl": "src",
        "paths": {
            "@/tests/*": ["../tests/*"],
            "@/*": ["*"]
        },
        "resolveJsonModule": true,
        "lib": ["ES2020.Promise"],
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "typeRoots": ["node_modules/@types", "./src/dtos/customLibTypes"]
    },
    "exclude": ["node_modules"],
    "include": ["src", "tests"]
}
